<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripListView"
            android:choiceMode="singleChoice"
            android:divider="#605bff"
            android:dividerHeight="4px"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewTripId"
            android:layout_alignTop="@+id/tripListView"
            android:layout_marginLeft="25dp"
            android:layout_alignLeft="@+id/tripListView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewTripName"
            android:layout_alignBottom="@+id/viewTripId"
            android:layout_alignTop="@+id/tripListView"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewTripDest"
            android:layout_below="@+id/viewTripName"
            android:layout_alignLeft="@+id/viewTripName"
            android:layout_alignStart="@+id/viewTripName" />




</PreferenceScreen>